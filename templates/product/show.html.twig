{% extends 'base.html.twig' %}

{% block title %} {{ product.name}} - Ma boutique en ligne {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-5">
            <img src="/uploads/images/{{ product.illustration}}" alt="{{ product.name }}" class="img-fluid" />
        </div>
        <div class="col-md-7 my-auto">
            <h3> {{ product.name}} </h3>
            <p> {{ product.subtitle}}</p>
            <span class="product-page-price">{{ (product.price / 100) |number_format(2)}} euro</span>
            <hr>
            <p>
            {{ product.description}}

            <hr>
            <a href="" class="btn btn-primary"> Ajouter au panier </a>
            </p>
        </div>
    
    </div>

{% endblock %}
